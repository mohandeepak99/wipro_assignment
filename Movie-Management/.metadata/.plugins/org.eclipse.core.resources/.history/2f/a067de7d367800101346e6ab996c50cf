package com.wipro.mohan.feign;

import java.util.List;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;

@FeignClient(name = "theatre-service", url = "${theatre.service.url}")
public interface TheatreFiegn {

    // Fetch theatres by name
    @GetMapping("/api/theatres/getTheatres")
    List<Long> getTheatresByName(@RequestParam("theatreName") String theatreName);
}