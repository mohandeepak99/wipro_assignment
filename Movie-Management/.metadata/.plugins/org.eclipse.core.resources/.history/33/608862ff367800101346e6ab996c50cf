package com.wipro.mohan.exception;


import org.springframework.http.HttpStatus;
import org.springframework.web.bind.annotation.*;

import java.util.Map;

@RestControllerAdvice
public class GlobalExceptionHandler {

 @ExceptionHandler(MovieNotFoundException.class)
 @ResponseStatus(HttpStatus.NOT_FOUND)
 public Map<String, Object> handleMovieNotFound(MovieNotFoundException ex) {
     return Map.of(
             "status", 404,
             "error", "Not Found",
             "message", ex.getMessage()
     );
 }

 @ExceptionHandler(TheatreNotFoundException.class)
 @ResponseStatus(HttpStatus.NOT_FOUND)
 public Map<String, Object> handleTheatreNotFound(TheatreNotFoundException ex) {
     return Map.of(
             "status", 404,
             "error", "Not Found",
             "message", ex.getMessage()
     );
 }
}
